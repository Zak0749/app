{
  "compilerOptions": {
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "target": "es5",
    "module": "esnext",
    "outDir": "./build/server",
    "rootDir": "src/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/test",
    "**/types/ts"
  ],
  "include": [
    "src/server/**/*"
  ]
}
